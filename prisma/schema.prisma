generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Accounts {
  id         String   @id @default(uuid())
  username   String   @unique
  email      String   @unique
  password   String
  admin      Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@map("accounts")
}
