{
  "openapi": "3.0.0",
  "info": {
    "title": "TurnPro Documentation",
    "description": "This is the TurnPro API Documentation, an API that's will be used on our MobileApp, fell free to contact us if you have any advice or idea",
    "version": "1.0.0",
    "contact": {
      "email": "luizegasp@gmail.com"
    }
  },
  "paths": {
    "/account": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Create an account",
        "description": "Create a new account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "account_username",
                  "email": "account@email.com",
                  "password": "1345742F"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Account created successfully"
          },
          "400": {
            "description": "Account already exists"
          }
        }
      },
      "put": {
        "tags": [
          "Account"
        ],
        "summary": "Update an account",
        "description": "Update the basic information of an account, as your username, email, password, etc..",
        "security": [
          {
            "auth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "new_username",
                  "email": "new@email.com",
                  "password": "124u951298k"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Account updated successfully"
          },
          "400": {
            "description": "Invalid username/email/password"
          },
          "403": {
            "description": "Access denied"
          },
          "409": {
            "description": "Empty fields"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "tags": [
          "Account"
        ],
        "summary": "Delete an account",
        "description": "Delete an existent account",
        "security": [
          {
            "auth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Account deleted successfully"
          },
          "400": {
            "description": "User doesn't exists / is not authenticated"
          }
        }
      }
    },
    "/session": {
      "post": {
        "tags": [
          "Session"
        ],
        "summary": "Auth an account",
        "description": "Authenticate a existent account",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "email": "account@email.com",
                  "password": "1345742F"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns your token"
          },
          "400": {
            "description": "Account doesn't exists"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "auth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-access-token"
      }
    }
  }
}